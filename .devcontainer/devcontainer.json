{
  "name": "Frappe v15 Dev (Generic)",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",

  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "18" },
    "ghcr.io/devcontainers/features/python:1": { "version": "3.11" }
  },

  "init": true,
  "overrideCommand": false,

  // ⇣ important pour éviter d’être root
  "containerUser": "vscode",
  "remoteUser": "vscode",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  "forwardPorts": [8000, 3306, 6379],
  "portsAttributes": {
    "8000": { "label": "Frappe Web" },
    "3306": { "label": "MariaDB" },
    "6379": { "label": "Redis" }
  },

  "containerEnv": {
    "FRAPPE_BRANCH": "version-15",
    "SITE_NAME": "dev.localhost",
    "ADMIN_PASSWORD": "admin",
    "DB_ROOT_USER": "root",
    "DB_ROOT_PASSWORD": "123",

    "CUSTOM_APP_URL": "",
    "CUSTOM_APP_BRANCH": "develop",

    // Bench dans /workspaces
    "BENCH_HOME": "/workspaces/frappe-bench"
  },

  // Provision à la création (log → /tmp/init.log)
  "onCreateCommand": "bash -lc 'set -euxo pipefail; chmod +x .devcontainer/scripts/init.sh; .devcontainer/scripts/init.sh |& tee /tmp/init.log'",

  // Deuxième filet de sécurité, juste après la création
  "postCreateCommand": "bash -lc 'set -euxo pipefail; chmod +x .devcontainer/scripts/init.sh; .devcontainer/scripts/init.sh |& tee -a /tmp/init.log'",

  // Quand l’IDE s’attache: si bench absent → init; puis démarre bench
  "postAttachCommand": "bash -lc 'if [ ! -d \"/workspaces/frappe-bench\" ]; then set -euxo pipefail; .devcontainer/scripts/init.sh |& tee -a /tmp/init.log; fi; (cd /workspaces/frappe-bench && nohup bench start >/tmp/bench.log 2>&1 &) || true'",

  // À chaque (re)start: services + bench
  "postStartCommand": "bash -lc \"(sudo service mariadb start || sudo service mysql start || true); (sudo service redis-server start || true); (cd /workspaces/frappe-bench && nohup bench start >/tmp/bench.log 2>&1 &)\""
}
